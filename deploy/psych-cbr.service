[Unit]
Description=Psych CBR API (FastAPI/Uvicorn)
After=network.target


[Service]
User=www-data
Group=www-data
WorkingDirectory=/opt/psych-cbr-api
Environment="PYTHONUNBUFFERED=1"
EnvironmentFile=/opt/psych-cbr-api/.env
ExecStart=/opt/psych-cbr-api/.venv/bin/uvicorn app.main:app --host 127.0.0.1 --port 8000 --workers 2
Restart=always
RestartSec=3


[Install]
WantedBy=multi-user.target